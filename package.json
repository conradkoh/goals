{
  "name": "goals",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nx run @apps/webapp:dev",
    "build": "nx run-many --target=build --all --parallel --outputStyle=dynamic",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "test": "nx run-many --target=test --all --parallel --outputStyle=dynamic",
    "test:watch": "nx run-many --target=test:watch --all --parallel --outputStyle=dynamic",
    "clean": "find . -name 'node_modules' -type d -prune -exec trash {} +",
    "typecheck": "nx run-many --target=typecheck --all --parallel --outputStyle=dynamic",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,md}": [
      "biome format --write --no-errors-on-unmatched",
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@nx/workspace": "22.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "nx": "22.1.2"
  },
  "dependencies": {
    "@biomejs/biome": "^2.1.4",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@types/node": "^20",
    "typescript": "^5.7.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "nx",
      "sharp",
      "unrs-resolver"
    ]
  }
}
