{
  "extends": "./convex/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "config/**/*",
    "modules/**/*",
    "src/**/*",
    "convex/**/*",
    "test.setup.ts",
    "vitest.config.mts"
  ],
  "exclude": ["convex/_generated", "node_modules", "dist"]
}
